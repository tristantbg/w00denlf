#blog-categories
	height 100vh
	padding-left $padding
	> .flickity-viewport
		transform translateX(10vw) translateZ(0)
		overflow initial !important
		position fixed
		height 100%
		width 100%
		top 0
		left $padding
	&.loaded
		> .flickity-viewport
			transition transform 600ms ease
			transform translateZ(0)

section.blog-section
	span(1/2.4)
	height 100%
	overflow hidden
	+below($md)
		span(1)
	&.is-selected
		// overflow scroll
		cursor auto
		.blog-category--image
			transition-delay 0.8s
			transform "translateY(calc(%s - 100%)) translateZ(0)" % $padding
		.blog-posts
			transition-delay 0.8s
			transform translateZ(0)

.blog-category--image
	transition transform 0.8s ease
	position absolute
	z-index 100
	width 100%
	height 100vh
	background-size cover
	background-position center

.blog-posts
	position relative
	height (100vh - ($font_header*4))
	transition transform 0.8s ease
	transform translateY(100vh) translateZ(0)
	padding-bottom $padding
	margin-top 'calc(%s + %s)' % ($font_header ($padding*3))
	.blog-posts--inner
		height auto
		display inline-block
	img
		display block

.iScrollVerticalScrollbar
	top 0 !important
	bottom 0 !important
	width .4rem !important
	.iScrollIndicator
		border none !important
		border-radius 0 !important
		background $secondary !important

.blog-item
	span(1)
	margin-bottom ($font_header*2)

.blog-item--header, .blog-item--chapeau, nav.pagination, #search-header
	span(1)
	padding 0 ($padding/2)

.blog-item--header
	margin-bottom 1em
	.blog-item--infos
		span(1)
		margin-bottom 1em
		padding 0.3em 0 0.2em
		border-top 0.2rem solid
		border-bottom 0.2rem solid
	.blog-item--title
		span(1)
		h3
			margin-top .6em

h3
	span(1)
	margin-bottom 1em
	padding 0.3em 0 0.2em
	border-top 0.2rem solid
	border-bottom 0.2rem solid

#search-header
	margin-bottom 2em

.blog-item--type, .blog-item--date
	column(1/2)

.blog-item--chapeau, .blog-item--featured
	span(1)
	margin-bottom 1em

.blog-item--content
	span(1)
	section
		span(1)

.post-content
	span(1)
	margin-bottom $padding
	a
		text-decoration underline
		-webkit-text-decoration-skip ink
		text-decoration-skip ink

.post-content.content--text, .post-content.content--embed
	padding 0 ($padding/2 + 0.3) 0 ($padding/2)

.post-content.content--image
	position relative
	img
		position absolute
		top 0
		left 0

.post-content.content--images
	height 40rem
	.flickity-viewport
		height 40rem
	.cell
		height 40rem
		img
			display block
	.flickity-prev-next-button
		background transparent
		&.next
			right 0
		&.previous
			left 0
		svg
			pointer-events none
		.arrow
			fill $secondary