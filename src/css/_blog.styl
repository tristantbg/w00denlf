#blog-categories
	height 100vh
	padding-left $padding
	> .flickity-viewport
		transform translateX(10vw) translateZ(0)
		overflow initial !important
		position fixed
		height 100%
		width 100%
		top 0
		left $padding
	&.loaded
		> .flickity-viewport
			transition transform 600ms ease
			transform translateZ(0)

section.blog-section
	span(1/2.4)
	height 100%
	overflow hidden
	+below($md)
		width 'calc(100% - %s)' % ($padding*2)
	&.is-selected
		// overflow scroll
		cursor auto
		.blog-category--image
			transition-delay 0.8s
			transform "translateY(calc(%s - 100%)) translateZ(0)" % $padding
			+below($md)
				transition-delay 2.8s
		.blog-posts
			transition-delay 0.8s
			transform translateZ(0)
			+below($md)
				transition-delay 2.8s

.blog-category--image
	transition transform 0.75s ease
	position absolute
	z-index 100
	width 100%
	height 100vh
	background-size cover
	background-position center
	&::after
		content ''
		width 100%
		background $primary
		position absolute
		+above($md + 1)
			height 'calc(%s + %s)' % ($font_header ($padding*2))
			bottom 'calc(%s - %s)' % ((-1*$font_header) ($padding*2))
		+below($md)
			height 'calc(%s + %s)' % ($font_header_mobile ($padding*2))
			bottom 'calc(%s - %s)' % ((-1*$font_header_mobile) ($padding*2))
	&.invert::after
		background $secondary

.blog-posts
	position relative
	height (100vh - ($font_header*4))
	transition transform 0.8s ease
	transform translateY(100vh) translateZ(0)
	padding 0 ($padding - 0.4)
	padding-bottom $padding
	+above($md + 1)
		margin-top 'calc(%s + %s)' % ($font_header ($padding*3))
	+below($md)
		margin-top 'calc(%s + %s)' % ($font_header_mobile ($padding*3))
	.blog-posts--inner
		height auto
		width 100%
		display inline-block
	img
		display block

.iScrollVerticalScrollbar
	top 0 !important
	right 0 !important
	bottom 0 !important
	width 0.3rem !important
	.iScrollIndicator
		border none !important
		border-radius 0 !important
		background $secondary !important

.blog-item
	span(1)
	margin-bottom ($padding*2)
	position relative
	&.opened
		h3.read-more
			display none

a.link-overlay
	position absolute
	top 2em
	bottom: 0
	left 0
	width 100%

.blog-item--header, .blog-item--chapeau, nav.pagination, #search-header
	span(1)
	//padding 0 ($padding/2)

h3
	span(1)
	margin-bottom $padding
	padding 0.3em 0 0.2em
	border-top 0.2rem solid
	border-bottom 0.2rem solid
	&.read-more
		border-top none

.share-buttons
	span(1)
	margin-bottom 0
	ul
		display inline-flex
	li:first-child
		+below($md)
			display none
	li:not(:last-child)
		margin-right $padding

.blog-item--header
	margin-bottom $padding
	.blog-item--infos
		span(1)
		margin-bottom $padding
		padding 0.3em 0 0.2em
		border-top 0.2rem solid
		border-bottom 0.2rem solid
	.blog-item--title
		span(1)
		h3
			padding 0
			margin-top $padding
			border 0
			margin-bottom 0

#search-header
	margin-bottom 2em

.blog-item--type, .blog-item--date
	column(1/2)

.blog-item--chapeau
	span(1)
	margin-bottom 1em

.blog-item--featured
	span(1)
	margin-bottom ($padding*2)

.blog-item--content
	span(1)
	section
		span(1)
	h2 + h3
		margin-top .6em

.post-content
	span(1)
	margin-bottom $padding
	a
		text-decoration underline
		-webkit-text-decoration-skip ink
		text-decoration-skip ink

// .post-content.content--text, .post-content.content--embed
// 	padding 0 ($padding/2 + 0.3) 0 ($padding/2)

.caption
	margin-top $padding

.post-content.content--image
	position relative
	img
		position absolute
		top 0
		left 0

.post-content.content--images
	height 40rem
	.flickity-viewport
		height 40rem
	.cell
		height 40rem
		img
			display block
	.flickity-prev-next-button
		background transparent
		&.next
			right 0
		&.previous
			left 0
		svg
			pointer-events none
		.arrow
			fill $secondary